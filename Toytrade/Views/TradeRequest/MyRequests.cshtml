@model List<BusinessLogicLayer.DTOs.TradeRequestDTO>  

<h2>My Trade Requests</h2>  

@foreach (var request in Model)  
{  
   <div class="trade-request-card">  
       <div class="trade-request-info">  
           <p><strong>Status:</strong> @request.Status</p>  
           <p><strong>From:</strong> @request.RequesterUsername</p>  
           <p><strong>To:</strong> @request.ReceiverUsername</p>  
       </div>  

       <div>  
           <h5>Offered Toys</h5>  
           <ul class="toy-list">  
               @foreach (var toy in request.OfferedToys)  
               {  
                   <li>  
                       <img src="@Url.Content($"~/images/{toy.ImagePath}")" width="100" />  
                       <span>@toy.Name</span>  
                   </li>  
               }  
           </ul>  
       </div>  

       <div>  
           <h5>Requested Toys</h5>  
           <ul class="toy-list">  
               @foreach (var toy in request.RequestedToys)  
               {  
                   <li>  
                       <img src="@Url.Content($"~/images/{toy.ImagePath}")" width="100" />  
                       <span>@toy.Name</span>  
                   </li>  
               }  
           </ul>  
       </div>  
   </div>  
}
