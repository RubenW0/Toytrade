@model List<PresentationLayer.Models.ToyViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Toys</title>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }


    @section Styles {
        <link rel="stylesheet" href="~/css/toy-list.css" asp-append-version="true">
    }
</head>
<body>

    <div class="container">
        <h2>My toys</h2>
        <a href="/Toy/AddToy" class="btn-standard">Add Toy</a>

        @foreach (var toy in Model)
        {
            <div class="toy-card">
                <img src="@toy.Image" alt="@toy.Name" class="toy-image" asp-append-version="true" />
                <div class="toy-info">
                    <h3>@toy.Name</h3>
                    <p><strong>Condition:</strong> @toy.Condition</p>
                </div>
                <div class="action-buttons">
                    <a href="/Toy/Edit/@toy.Id" class="btn-standard">Edit</a>

                    <form method="post" action="/Toy/Delete" onsubmit="return confirm('Are you sure you want to delete this toy?');">
                        <input type="hidden" name="id" value="@toy.Id" />
                        <button type="submit" class="btn-standard delete-button">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>

</body>
</html>
