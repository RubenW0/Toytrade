@model PresentationLayer.ViewModels.ToyViewModel

<h2>Edit Toy</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Name</label>
        <input type="text" asp-for="Name" required />
    </div>

    <div>
        <label>Image</label>
        <input type="text" asp-for="Image" />
    </div>

    <div>
        <label>Condition</label>
        <input type="text" asp-for="Condition" required />
    </div>

    <button type="submit">Save Changes</button>
</form>
