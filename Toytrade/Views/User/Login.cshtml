@model PresentationLayer.Models.LoginViewModel

<div class="container" style="max-width: 400px; margin: auto;">
    <h2 style="text-align: center; color: #d99873;">Login</h2>

    <form method="post" action="/User/Login" style="display: flex; flex-direction: column; gap: 15px;">
        <div>
            <label asp-for="Username" class="form-label">Username:</label>
            <input type="text" asp-for="Username" class="form-control" required />
        </div>

        <div>
            <label asp-for="Password" class="form-label">Password:</label>
            <input type="password" asp-for="Password" class="form-control" required />
        </div>

        <button class="btn btn-standard" type="submit">Login</button>

        @if (ViewBag.Error != null)
        {
            <p style="color:red; font-weight: bold;">@ViewBag.Error</p>
        }
    </form>

    <div style="text-align: center; margin-top: 15px;">
        <p>Don't have an account?</p>
        <a href="/User/Register" class="btn btn-standard">Register</a>
    </div>
</div>
